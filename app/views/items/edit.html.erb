<%= render "shared/second-header"%>
<%= form_with model: @item, class: 'edit-item-main', local: true do |f| %>
  <div class='form-wrap'>

    <div class='form-header'>
      <h1 class='form-header-text'>
        編集ページ
      </h1>
    </div>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="form-group">
      <div class="form-text-wrap">
        <label class="form-text">出品画像</label>
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">タイトル</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :title, class:"item-input", id:"title" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">アーティスト</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :artist, class:"item-input", id:"artist" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">商品説明</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :text, class:"item-input-text", id:"title" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">ジャンル</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"hash-select"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">国</label>
      </div>
      <%= f.text_field :country, class:"item-input", id:"country" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">フォーマット</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:format_id, Format.all, :id, :name, {}, {class:"hash-select"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">商品の状態</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"hash-select"}) %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">価格</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :price, class:"int-input", id:"item-price", placeholder:"半角数字" %>
    </div>
    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">在庫数</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :stock, class:"int-input", id:"stock", placeholder:"半角数字" %>
    </div>
    <div class='login-btn'>
      <%= f.submit "編集する" ,class:"login-gray-btn" %>
    </div>
  </div>
<% end %>

<%= form_with model: @item, class: 'edit-item-main', method: :delete, local: true do |f| %>
  <div class="form-wrap">
    <div class='form-header'>
      <h1 class='form-header-text'>
        商品削除
      </h1>
    </div>
    <%# <p class="destroy-notice">一度削除した商品は戻せません</p> %>
    <div class='login-btn'>
      <%= f.submit "削除する" ,class:"login-gray-btn" %>
    </div>
  </div>
<% end %>